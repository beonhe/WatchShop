@using WatchShop.Models
@model  List<Cart>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="box">

    <form method="post" action="checkout1.html">

        <h1>Shopping cart</h1>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th colspan="2">Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Discount</th>
                        <th colspan="2">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                <a href="#">
                                    <img src="@item.itemImage" alt="@item.itemName" width="35" height="35">
                                </a>
                            </td>
                            <td>
                                <a href="#">@item.itemName</a>
                            </td>
                            <td>
                                <input id="mytext" name="soluong" type="number" value="@item.itemQuatity" class="form-control">
                            </td>
                            <td>@item.itemPrice</td>
                            <td>$0.00</td>
                            <td>@String.Format("{0:0,0}", item.total) VNĐ</td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { @id = item.itemId })"
                            </td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5">Total</th>
                        <th colspan="2">@String.Format("{0:0,0}", ViewBag.TotalPrice) VNĐ</th>
                    </tr>
                </tfoot>
            </table>

        </div>
        <!-- /.table-responsive -->

        <div class="box-footer">
            <div class="pull-left">
                <a href="@Url.Action("Index","Home")" class="btn btn-default"><i class="fa fa-chevron-left"></i> Continue shopping</a>
            </div>

            
        </div>

    </form>

</div>


